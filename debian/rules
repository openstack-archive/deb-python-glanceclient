#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@  --with python2

DEBVERS := $(shell dpkg-parsechangelog | sed -n -e 's/^Version: //p')
VERSION := $(shell echo '$(DEBVERS)' | sed -e 's/^[[:digit:]]*://' -e 's/[~-].*//')

override_dh_auto_configure:
	echo $(VERSION) > glanceclient/versioninfo
	dh_auto_configure

override_dh_auto_clean:
	echo $(VERSION) > glanceclient/versioninfo
	dh_auto_clean
	rm -f glanceclient/versioninfo
	rm -f ChangeLog

override_dh_auto_test:
ifeq (,$(filter nocheck,$(DEB_BUILD_OPTIONS)))
	set -e ; for pyversion in $(shell pyversions -r); do $$pyversion setup.py test; done
endif

get-vcs-source:
	git remote add upstream git://github.com/openstack/python-glanceclient.git || true
	git fetch upstream
	if [ ! -f ../python-glanceclient_$(VERSION).orig.tar.xz ] ; then \
		git archive --prefix=python-glanceclient-$(VERSION)/ $(VERSION) | xz >../python-glanceclient_$(VERSION).orig.tar.xz ; \
	fi
	if ! git checkout master ; then \
		echo "No upstream branch: checking out" ; \
		git checkout -b master upstream/master ; \
	fi
	git checkout debian/experimental

get-orig-source:
	uscan --verbose --force-download --rename --destdir=../build-area

regen-manifest-patch:
	quilt pop -a || true
	quilt push install-missing-files.patch
	git checkout MANIFEST.in
	git ls-files --no-empty-directory --exclude-standard glanceclient | grep -v '.py$$' | sed -n 's/.*/include &/gp' >> MANIFEST.in
	quilt refresh
	quilt pop -a
